<%- contentFor('body') %>

<!-- Post Container -->
<article class="post-container">
  <!-- Post Header -->
  <header class="post-header">
    <h1 class="post-title"><%= post.title %></h1>
    <!-- Post Meta -->
    <div class="post-meta">
      <span class="post-author">By <%= post.name %></span>
      <span class="divider" aria-hidden="true">â€¢</span>
      <span class="post-date">
        <%= new Date(post.created_at).toLocaleDateString("en-US", { year:
        "numeric", month: "long", day: "numeric", }) %>
      </span>
    </div>
  </header>

  <!-- Post Image -->
  <% if (post.image_url) { %>
  <figure class="post-image">
    <img
      src="<%= post.image_url %>"
      alt="Featured image for <%= post.title %>"
      loading="lazy"
    />
  </figure>
  <% } %>

  <!-- Post Content -->
  <div class="post-content">
    <% if (post.formattedContent && post.formattedContent.length > 0) { %>
    <%post.formattedContent.forEach(paragraph => { %>
    <p><%- paragraph %></p>
    <% }); %> <% } else { %>
    <p>No content available.</p>
    <% } %>
  </div>

  <!-- Post Footer -->
  <footer class="post-footer">
    <!-- Post Actions -->
    <div class="post-actions">
      <!-- Edit -->
      <a
        href="/posts/<%=post.id%>/edit"
        class="btn btn-primary"
        title="Edit this post"
      >
        <img src="/svgs/edit_post.svg" alt="Edit post icon" />
        <span>Edit</span>
      </a>

      <!-- Deletion -->
      <a
        href="/posts/<%=post.id%>/delete"
        class="btn btn-danger inline-form"
        role="button"
        aria-label="Delete this post"
      >
        <img src="/svgs/delete_post.svg" alt="delete post icon" />
        <span>Delete</span>
      </a>
    </div>
    <!-- return to All Posts -->
    <a href="/blogs" class="btn btn-secondary">
      <img src="/svgs/read_all.svg" alt="read all posts icon" />
      <span> All Posts</span>
    </a>
  </footer>
</article>
